{{#if admin_edit_company}}
<!--admin_edit_company-->
<div class="admin_edit_company">
  <h1>編輯帳號</h1>
  {{> message}}
  <form action="" name="form" id="admin_company">

    <div>
      <label for="cpy_no">公司代碼</label>
      <input type="text" name="cpy_no" class="form-control" placeholder="請輸入公司統編" value="{{ adminCompanyInfo.CPY_ID }}" required>
    </div>

    <div>
      <label for="cpy_name">公司名稱</label>
      <input type="text" name="cpy_name" class="form-control" placeholder="請輸入公司名稱" value="{{ adminCompanyInfo.CPY_NAME }}" required>
    </div>

    <div>
      <label for="email">Email</label>
      <input type="email" name="email" class="form-control" placeholder="請輸入信箱" value="{{ adminCompanyInfo.EMAIL }}" required>
    </div>

<!--
    <div>
      <label for="industry_no">產業類別</label>
      <select name="industry_no" id="industry_no" class="form-control" required>
