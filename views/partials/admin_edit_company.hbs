        </option>
        {{/each}}
      </select>
    </div>
-->

    <div>
      <label for="ishr">客服使用者</label>
      <select name="ishr" class="form-control" required>
        <option value="" selected>請選擇</option>
        <option value="1" {{#is adminCompanyInfo.ISHR '1'}} selected {{/is}}>是</option>
        <option value="0" {{#is adminCompanyInfo.ISHR '0'}} selected {{/is}}>否</option>
      </select>
    </div>

    <div>
      <label for="isadmin">權限</label>
      <select name="isadmin" class="form-control" required>
        <option value="" selected>請選擇</option>
        <option value="1" {{#is adminCompanyInfo.ISADMIN '1'}} selected {{/is}}>管理員</option>
        <option value="0" {{#is adminCompanyInfo.ISADMIN '0'}} selected {{/is}}>一般使用者</option>
      </select>
    </div>

    <div class="formButton">
      <input id="cancel" type="button" class="btn btn-primary" onclick="Method.common.page('/admin_company')" value="取消">
      <input id="save" type="submit" class="btn btn-info" data-action="/{{route}}/{{id}}/{{category}}/{{action}}" value="儲存">
    </div>
  </form>
</div>
{{/if}}